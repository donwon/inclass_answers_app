<h1>Welcome to Awesome Answers</h1>

<%= link_to "New Question", new_question_path, class: "btn btn-primary" %>

<% @questions.each do |question| %>
  <p><%= link_to question.title, question %></p>
  <p><%= special_truncate(question.body).html_safe %></p>
  <p>Created On: <%= formatted_date question.created_at %></p>
  <hr>
<% end %>

